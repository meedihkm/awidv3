# Environment de production - À configurer dans Coolify

# Application
NODE_ENV=production
PORT=3000

# Database PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_NAME=awid_db
DB_USER=awid_user
DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD

# JWT Secrets (générer avec: openssl rand -base64 32)
JWT_SECRET=CHANGE_ME_JWT_SECRET_32_CHARS_MIN
JWT_REFRESH_SECRET=CHANGE_ME_REFRESH_SECRET_32_CHARS_MIN
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS - Domaines autorisés (séparés par des virgules)
CORS_ORIGIN=https://app.votredomaine.com,https://admin.votredomaine.com

# Sentry (optionnel - monitoring des erreurs)
SENTRY_DSN=

# Email SMTP (optionnel)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@awid.app

# Storage
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Logs
LOG_LEVEL=info
