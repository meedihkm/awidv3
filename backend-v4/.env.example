# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=awid_v4
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_URL=postgresql://awid:password@localhost:5432/awid_dev
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# External Services
GOOGLE_MAPS_API_KEY=
ONESIGNAL_APP_ID=
ONESIGNAL_API_KEY=
SENTRY_DSN=

# Storage
STORAGE_TYPE=local
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# Email
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@awid.dz

# SMS (Algeria)
SMS_PROVIDER=mobilis
SMS_API_KEY=
SMS_SENDER=AWID

# Features Flags
FEATURE_ROUTE_OPTIMIZATION=false
FEATURE_REALTIME_TRACKING=true
FEATURE_MULTI_ORG=false
FEATURE_OFFLINE_SYNC=true

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
BCRYPT_ROUNDS=12

# Monitoring
LOG_LEVEL=info
ENABLE_METRICS=true
